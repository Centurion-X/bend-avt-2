{
  "compileOnSave": false,
  "compilerOptions":
  {
    "baseUrl": "source",
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2019", "dom"],
    "moduleResolution": "node",
    "outDir": "./build/",
    "paths":
    {
      "@assets/*": ["assets/*"],
      "@scripts/*": ["scripts/*"],
      "@styles": ["assets/styles/styles.css"]
    },
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2019"
  },  
  "exclude": ["node_modules"],
  "include": ["./**/*"]
}